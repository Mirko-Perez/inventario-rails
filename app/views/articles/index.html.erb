<div class="flex justify-between items-center mb-8 pb-4 border-b-2 border-gray-200">
  <h1 class="text-3xl font-bold text-gray-900">Articles</h1>
  <%= link_to "New Article", new_article_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
</div>

<div class="bg-white p-6 rounded-lg shadow-sm mb-6">
  <%= form_with url: articles_path, method: :get, local: true, class: "space-y-4" do |form| %>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
      <div>
        <%= form.label :model, "Model", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :model, placeholder: "Search by model", value: params[:model], class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      <div>
        <%= form.label :brand, "Brand", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :brand, options_for_select([['All Brands', '']] + @brands.map { |b| [b, b] }, params[:brand]), {}, { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" } %>
      </div>
      <div>
        <%= form.label :entry_date, "Entry Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.date_field :entry_date, value: params[:entry_date], class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      <div class="flex space-x-2">
        <%= form.submit "Filter", class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-md transition-colors" %>
        <%= link_to "Clear", articles_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-700 font-medium py-2 px-4 rounded-md transition-colors" %>
      </div>
    </div>
  <% end %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @articles.each do |article| %>
    <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow p-6">
      <div class="flex justify-between items-start mb-4">
        <h3 class="text-lg font-semibold text-gray-900">
          <%= link_to "#{article.brand} #{article.model}", article_path(article), class: "hover:text-blue-600 transition-colors" %>
        </h3>
        <span class="bg-gray-100 text-gray-600 text-xs px-2 py-1 rounded">
          <%= article.entry_date.strftime("%b %d, %Y") %>
        </span>
      </div>
      <div class="space-y-2 mb-4">
        <p class="text-sm text-gray-600">
          <span class="font-medium">Current Carrier:</span> <%= article.current_person.full_name %>
        </p>
        <p class="text-sm text-gray-600">
          <span class="font-medium">Entry Date:</span> <%= article.entry_date.strftime("%B %d, %Y") %>
        </p>
      </div>
      <div class="flex flex-wrap gap-2">
        <%= link_to "View", article_path(article), class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
        <%= link_to "Transfer", new_article_transfer_path(article), class: "bg-blue-100 hover:bg-blue-200 text-blue-700 text-sm font-medium px-3 py-1 rounded transition-colors" %>
        <%= link_to "Edit", edit_article_path(article), class: "text-gray-600 hover:text-gray-800 text-sm font-medium" %>
      </div>
    </div>
  <% end %>
</div>

<% if @articles.empty? %>
  <div class="text-center py-12">
    <div class="text-gray-400 mb-4">
      <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
    </div>
    <h3 class="text-lg font-medium text-gray-900 mb-2">No articles found</h3>
    <p class="text-gray-600">Start by <%= link_to "adding your first article", new_article_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>.</p>
  </div>
<% end %>
