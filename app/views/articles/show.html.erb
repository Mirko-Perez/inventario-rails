<div class="page-header">
  <h1><%= @article.brand %> <%= @article.model %></h1>
  <div class="header-actions">
    <%= link_to "Transfer", new_article_transfer_path(@article), class: "btn btn-primary" %>
    <%= link_to "Edit", edit_article_path(@article), class: "btn btn-secondary" %>
    <%= link_to "Back to Articles", articles_path, class: "btn btn-outline" %>
  </div>
</div>

<div class="article-details">
  <div class="detail-section">
    <h2>Article Information</h2>
    <div class="detail-grid">
      <div class="detail-item">
        <label>Brand:</label>
        <span><%= @article.brand %></span>
      </div>
      <div class="detail-item">
        <label>Model:</label>
        <span><%= @article.model %></span>
      </div>
      <div class="detail-item">
        <label>Entry Date:</label>
        <span><%= @article.entry_date.strftime("%B %d, %Y") %></span>
      </div>
      <div class="detail-item">
        <label>Current Carrier:</label>
        <span><%= link_to @article.current_person.full_name, person_path(@article.current_person) %></span>
      </div>
    </div>
  </div>

  <div class="detail-section">
    <h2>Transfer History</h2>
    <% if @transfer_history.any? %>
      <div class="transfer-list">
        <% @transfer_history.each do |transfer| %>
          <div class="transfer-item">
            <div class="transfer-date">
              <%= transfer.transfer_date.strftime("%B %d, %Y") %>
            </div>
            <div class="transfer-details">
              <strong>From:</strong> <%= transfer.from_person.full_name %> â†’
              <strong>To:</strong> <%= transfer.to_person.full_name %>
              <% if transfer.notes.present? %>
                <div class="transfer-notes"><%= transfer.notes %></div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="no-transfers">No transfers recorded for this article.</p>
    <% end %>
  </div>
</div>

<div class="danger-zone">
  <%= link_to "Delete Article", article_path(@article), method: :delete, 
              class: "btn btn-danger", 
              confirm: "Are you sure you want to delete this article? This action cannot be undone." %>
</div>
