<div class="flex justify-between items-center mb-8 pb-4 border-b-2 border-gray-200">
  <h1 class="text-3xl font-bold text-gray-900">
    <%= @article.brand %> <%= @article.model %>
    <% if @article.deleted? %>
      <span class="align-middle ml-3 inline-flex items-center px-2 py-1 rounded text-xs font-semibold bg-red-100 text-red-700 border border-red-200">Eliminado</span>
    <% end %>
  </h1>
  <div class="flex flex-wrap gap-2">
    <% if @article.deleted? %>
    <span class="inline-flex items-center gap-2 px-4 py-2 rounded-md text-sm font-medium bg-gray-100 text-gray-400 cursor-not-allowed" title="No puedes transferir un artículo eliminado">
      Transfer
    </span>
    <% else %>
      <%= link_to "Transfer", new_article_transfer_path(@article), class: "inline-flex items-center gap-2 px-4 py-2 rounded-md text-sm font-medium bg-blue-600 text-white hover:bg-blue-700 transition-colors" %>
    <% end %>
    <%= link_to "Edit", edit_article_path(@article), class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
    <%= link_to "Back to Articles", articles_path, class: "border border-gray-300 hover:bg-gray-50 text-gray-700 font-medium py-2 px-4 rounded-lg transition-colors" %>
  </div>
</div>

<% if @article.deleted? %>
  <div class="mb-6 p-4 rounded-md border border-red-200 bg-red-50 text-red-800">
    Este artículo fue eliminado (baja lógica). El registro y su historial se conservan.
  </div>
<% end %>

<div class="bg-white rounded-lg shadow-sm overflow-hidden">
  <div class="p-6 border-b border-gray-200">
    <h2 class="text-xl font-semibold text-gray-900 mb-6">Article Information</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <label class="block text-sm font-medium text-gray-500 mb-1">Brand</label>
        <span class="text-gray-900"><%= @article.brand %></span>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-500 mb-1">Model</label>
        <span class="text-gray-900"><%= @article.model %></span>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-500 mb-1">Entry Date</label>
        <span class="text-gray-900"><%= @article.entry_date.strftime("%B %d, %Y") %></span>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-500 mb-1">Current Carrier</label>
        <span class="text-blue-600 hover:text-blue-800">
          <%= link_to @article.current_person.full_name, person_path(@article.current_person), class: "font-medium" %>
        </span>
      </div>
    </div>
  </div>

  <div class="p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-6">Transfer History</h2>
    <% if @transfer_history.any? %>
      <div class="space-y-4">
        <% @transfer_history.each do |transfer| %>
          <div class="bg-gray-50 p-4 rounded-lg border-l-4 border-blue-500">
            <div class="flex justify-between items-start mb-2">
              <div class="font-medium text-gray-900">
                <%= transfer.transfer_date.strftime("%B %d, %Y") %>
                <% if transfer.deleted? %>
                  <span class="ml-2 align-middle inline-flex items-center px-2 py-0.5 rounded text-xs font-semibold bg-red-100 text-red-700 border border-red-200">Transfer eliminada</span>
                <% end %>
              </div>
            </div>
            <div class="text-gray-700">
              <span class="font-medium">From:</span> <%= transfer.from_person.full_name %>
              <% if transfer.from_person.deleted? %>
                <span class="ml-2 align-middle inline-flex items-center px-2 py-0.5 rounded text-xs font-semibold bg-red-100 text-red-700 border border-red-200">Eliminado</span>
              <% end %>
              <span class="text-blue-500 mx-2">→</span>
              <span class="font-medium">To:</span> <%= transfer.to_person.full_name %>
              <% if transfer.to_person.deleted? %>
                <span class="ml-2 align-middle inline-flex items-center px-2 py-0.5 rounded text-xs font-semibold bg-red-100 text-red-700 border border-red-200">Eliminado</span>
              <% end %>
              <% if transfer.notes.present? %>
                <div class="mt-2 p-3 bg-blue-50 rounded text-sm italic text-gray-600">
                  <%= transfer.notes %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <div class="text-gray-400 mb-2">
          <svg class="mx-auto h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
          </svg>
        </div>
        <p class="text-gray-500">No transfers recorded for this article.</p>
      </div>
    <% end %>
  </div>
</div>

<div class="mt-8 pt-6 border-t-2 border-red-200 flex flex-wrap gap-2">
  <% if @article.deleted? %>
    <%= button_to "Restore Article",
          restore_article_path(@article),
          method: :post,
          form: { class: "inline" },
          class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
  <% else %>
    <%= button_to "Delete Article",
          article_path(@article),
          method: :delete,
          form: { class: "inline", data: { turbo_confirm: "Are you sure you want to delete this article? This action cannot be undone." } },
          class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
  <% end %>
</div>
