<div class="flex justify-between items-center mb-8 pb-4 border-b-2 border-gray-200">
  <h1 class="text-3xl font-bold text-gray-900">New Article</h1>
  <%= link_to "Back to Articles", articles_path, class: "border border-gray-300 hover:bg-gray-50 text-gray-700 font-medium py-2 px-4 rounded-lg transition-colors" %>
</div>

<div class="bg-white p-8 rounded-lg shadow-sm max-w-2xl">
  <%= form_with model: @article, local: true, class: "space-y-6" do |form| %>
    <% if @article.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
        <h4 class="font-medium mb-2"><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h4>
        <ul class="list-disc list-inside space-y-1">
          <% @article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :brand, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :brand, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", required: true %>
    </div>

    <div>
      <%= form.label :model, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :model, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", required: true %>
    </div>

    <div>
      <%= form.label :entry_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.date_field :entry_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", required: true, value: Date.current %>
    </div>

    <div>
      <%= form.label :current_person_id, "Initial Carrier", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :current_person_id, 
                      options_from_collection_for_select(@people, :id, :full_name, @article.current_person_id),
                      { prompt: "Select a person" },
                      { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", required: true } %>
    </div>

    <div class="flex space-x-4 pt-4">
      <%= form.submit "Create Article", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-colors" %>
      <%= link_to "Cancel", articles_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-700 font-medium py-2 px-6 rounded-lg transition-colors" %>
    </div>
  <% end %>
</div>
