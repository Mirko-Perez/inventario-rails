<div class="page-header">
  <h1>Transfer Details</h1>
  <%= link_to "Back to Transfers", transfers_path, class: "btn btn-outline" %>
</div>

<div class="transfer-details">
  <div class="detail-section">
    <h2>Transfer Information</h2>
    <div class="detail-grid">
      <div class="detail-item">
        <label>Article:</label>
        <span><%= link_to "#{@transfer.article.brand} #{@transfer.article.model}", article_path(@transfer.article) %></span>
      </div>
      <div class="detail-item">
        <label>From:</label>
        <span><%= link_to @transfer.from_person.full_name, person_path(@transfer.from_person) %></span>
      </div>
      <div class="detail-item">
        <label>To:</label>
        <span><%= link_to @transfer.to_person.full_name, person_path(@transfer.to_person) %></span>
      </div>
      <div class="detail-item">
        <label>Transfer Date:</label>
        <span><%= @transfer.transfer_date.strftime("%B %d, %Y") %></span>
      </div>
      <% if @transfer.notes.present? %>
        <div class="detail-item full-width">
          <label>Notes:</label>
          <span><%= @transfer.notes %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="danger-zone">
  <%= link_to "Delete Transfer", transfer_path(@transfer), method: :delete, 
              class: "btn btn-danger", 
              confirm: "Are you sure you want to delete this transfer? This action cannot be undone." %>
</div>
