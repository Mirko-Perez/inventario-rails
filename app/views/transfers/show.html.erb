<div class="flex justify-between items-center mb-8 pb-4 border-b-2 border-gray-200">
  <h1 class="text-3xl font-bold text-gray-900">Transfer Details</h1>
  <div class="flex space-x-3">
  <%= link_to "Back to Transfers", transfers_path, class: "border border-gray-300 hover:bg-gray-50 text-gray-700 font-medium py-2 px-4 rounded-lg transition-colors" %>
  </div>
</div>

<div class="bg-white rounded-lg shadow-sm overflow-hidden">
  <div class="p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-6">Transfer Information</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <label class="block text-sm font-medium text-gray-500 mb-1">Article</label>
        <span class="text-blue-600 hover:text-blue-800">
          <%= link_to "#{@transfer.article.brand} #{@transfer.article.model}", article_path(@transfer.article), class: "font-medium" %>
          <% if @transfer.article.deleted? %>
            <span class="align-middle ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-semibold bg-red-100 text-red-700 border border-red-200">Eliminado</span>
          <% end %>
        </span>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-500 mb-1">Transfer Date</label>
        <span class="text-gray-900"><%= @transfer.transfer_date.strftime("%B %d, %Y") %></span>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-500 mb-1">From</label>
        <span class="text-blue-600 hover:text-blue-800">
          <%= link_to @transfer.from_person.full_name, person_path(@transfer.from_person), class: "font-medium" %>
          <% if @transfer.from_person.deleted? %>
            <span class="align-middle ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-semibold bg-red-100 text-red-700 border border-red-200">Eliminado</span>
          <% end %>
        </span>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-500 mb-1">To</label>
        <span class="text-blue-600 hover:text-blue-800">
          <%= link_to @transfer.to_person.full_name, person_path(@transfer.to_person), class: "font-medium" %>
          <% if @transfer.to_person.deleted? %>
            <span class="align-middle ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-semibold bg-red-100 text-red-700 border border-red-200">Eliminado</span>
          <% end %>
        </span>
      </div>
      <% if @transfer.notes.present? %>
        <div class="md:col-span-2">
          <label class="block text-sm font-medium text-gray-500 mb-1">Notes</label>
          <div class="bg-blue-50 border border-blue-200 p-3 rounded-lg">
            <span class="text-gray-700"><%= @transfer.notes %></span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="mt-8 pt-6 border-t-2 border-red-200 flex flex-wrap gap-2">
  <% if @transfer.deleted? %>
    <%= button_to "Restore Transfer",
          restore_transfer_path(@transfer),
          method: :post,
          form: { class: "inline" },
          class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
  <% else %>
    <%= button_to "Delete Transfer",
          transfer_path(@transfer),
          method: :delete,
          form: { class: "inline", data: { turbo_confirm: "Are you sure you want to delete this transfer? This action cannot be undone." } },
          class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
  <% end %>
</div>