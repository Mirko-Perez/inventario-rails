<div class="flex justify-between items-center mb-8 pb-4 border-b-2 border-gray-200">
  <h1 class="text-3xl font-bold text-gray-900"><%= @person.full_name %></h1>
  <div class="flex space-x-3">
    <%= link_to "Edit", edit_person_path(@person), class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
    <%= link_to "Back to People", people_path, class: "border border-gray-300 hover:bg-gray-50 text-gray-700 font-medium py-2 px-4 rounded-lg transition-colors" %>
  </div>
</div>

<div class="space-y-8">
  <div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <div class="p-6 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">Personal Information</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-500 mb-1">First Name</label>
          <span class="text-gray-900"><%= @person.first_name %></span>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-500 mb-1">Last Name</label>
          <span class="text-gray-900"><%= @person.last_name %></span>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <div class="p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">
        Current Articles 
        <span class="bg-blue-100 text-blue-800 text-sm px-2 py-1 rounded-full ml-2"><%= @current_articles.count %></span>
      </h2>
      <% if @current_articles.any? %>
        <div class="space-y-4">
          <% @current_articles.each do |article| %>
            <div class="bg-gray-50 p-4 rounded-lg flex justify-between items-center">
              <div>
                <h4 class="font-medium text-gray-900">
                  <%= link_to "#{article.brand} #{article.model}", article_path(article), class: "text-blue-600 hover:text-blue-800" %>
                </h4>
                <p class="text-sm text-gray-600">Entry Date: <%= article.entry_date.strftime("%B %d, %Y") %></p>
              </div>
              <div class="flex space-x-2">
                <%= link_to "Transfer", new_article_transfer_path(article), class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium px-3 py-1 rounded transition-colors" %>
                <%= link_to "View", article_path(article), class: "text-gray-600 hover:text-gray-800 text-sm font-medium" %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="text-gray-400 mb-2">
            <svg class="mx-auto h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <p class="text-gray-500">This person is not currently carrying any articles.</p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <div class="p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">Transfer History</h2>
      <% if @transfer_history.any? %>
        <div class="space-y-4">
          <% @transfer_history.each do |transfer| %>
            <div class="bg-gray-50 p-4 rounded-lg border-l-4 border-blue-500">
              <div class="flex justify-between items-start mb-2">
                <div class="font-medium text-gray-900">
                  <%= transfer.transfer_date.strftime("%B %d, %Y") %>
                </div>
              </div>
              <div class="text-gray-700">
                <p class="mb-2">
                  <span class="font-medium">Article:</span> 
                  <%= link_to "#{transfer.article.brand} #{transfer.article.model}", article_path(transfer.article), class: "text-blue-600 hover:text-blue-800" %>
                </p>
                <% if transfer.from_person_id == @person.id %>
                  <p><span class="font-medium">Transferred to:</span> <%= transfer.to_person.full_name %></p>
                <% else %>
                  <p><span class="font-medium">Received from:</span> <%= transfer.from_person.full_name %></p>
                <% end %>
                <% if transfer.notes.present? %>
                  <div class="mt-2 p-3 bg-blue-50 rounded text-sm italic text-gray-600">
                    <%= transfer.notes %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="text-gray-400 mb-2">
            <svg class="mx-auto h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
            </svg>
          </div>
          <p class="text-gray-500">No transfer history for this person.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="mt-8 pt-6 border-t-2 border-red-200">
  <%= link_to "Delete Person", person_path(@person), method: :delete, 
              class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg transition-colors", 
              confirm: "Are you sure you want to delete this person? This action cannot be undone." %>
</div>
