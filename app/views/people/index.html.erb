<div class="flex justify-between items-center mb-8 pb-4 border-b-2 border-gray-200">
  <h1 class="text-3xl font-bold text-gray-900">People</h1>
  <%= link_to "New Person", new_person_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @people.each do |person| %>
    <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow p-6">
      <div class="mb-4">
        <h3 class="text-lg font-semibold text-gray-900">
          <%= link_to person.full_name, person_path(person), class: "hover:text-blue-600 transition-colors" %>
        </h3>
      </div>
      <div class="mb-4">
        <p class="text-sm text-gray-600 mb-2">
          <span class="font-medium">Current Articles:</span> 
          <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full"><%= person.current_articles.count %></span>
        </p>
        <% if person.current_articles.any? %>
          <ul class="space-y-1 text-sm">
            <% person.current_articles.limit(3).each do |article| %>
              <li class="text-blue-600 hover:text-blue-800">
                <%= link_to "#{article.brand} #{article.model}", article_path(article) %>
              </li>
            <% end %>
            <% if person.current_articles.count > 3 %>
              <li class="text-gray-500 italic">... and <%= person.current_articles.count - 3 %> more</li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <div class="flex space-x-2">
        <%= link_to "View", person_path(person), class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition" %>
        <%= link_to "Edit", edit_person_path(person), class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition" %>
      </div>
    </div>
  <% end %>
</div>

<% if @people.empty? %>
  <div class="text-center py-12">
    <div class="text-gray-400 mb-4">
      <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
      </svg>
    </div>
    <h3 class="text-lg font-medium text-gray-900 mb-2">No people found</h3>
    <p class="text-gray-600">Start by <%= link_to "adding your first person", new_person_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>.</p>
  </div>
<% end %>
