<div class="flex justify-between items-center mb-8 pb-4 border-b-2 border-gray-200">
  <h1 class="text-3xl font-bold text-gray-900">New Person</h1>
  <%= link_to "Back to People", people_path, class: "border border-gray-300 hover:bg-gray-50 text-gray-700 font-medium py-2 px-4 rounded-lg transition-colors" %>
</div>

<div class="bg-white p-8 rounded-lg shadow-sm max-w-2xl">
  <%= form_with model: @person, local: true, class: "space-y-6" do |form| %>
    <% if @person.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
        <h4 class="font-medium mb-2"><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h4>
        <ul class="list-disc list-inside space-y-1">
          <% @person.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :first_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :first_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", required: true %>
    </div>

    <div>
      <%= form.label :last_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :last_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", required: true %>
    </div>

    <div class="flex space-x-4 pt-4">
      <%= form.submit "Create Person", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-colors" %>
      <%= link_to "Cancel", people_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-700 font-medium py-2 px-6 rounded-lg transition-colors" %>
    </div>
  <% end %>
</div>
